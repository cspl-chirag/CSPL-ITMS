<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.hp.superadminitms.Activity.Menus.Admin_ReportListActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llBusInfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="View Buswise Information"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llRouteWiseBusInfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="View Routewise Bus Information"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llBreakdownList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_toolbox"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="View Breakdown Buses"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llDailyBusMaintanance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_toolbox"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Daily Buswise Maintanance"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llVehicleMaintananceHistory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Vehicle Maintanance History"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llAccidentReports"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="AccidentReport"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llDriverTripReport"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Driver Trip Report"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llDriverDailyCheckReport"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Driver Daily Check Report"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llInventory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Stock Movement Report"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llStaff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Staff Details"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llFineReport"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="Fine Report"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:elevation="8dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/llNotification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_accent_text_rounded_corner_transparent_8dp"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp"
                            android:paddingStart="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/ic_stock"
                                android:tint="@color/colorAccent"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_bullet"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="RTO Related Information"
                                android:textColor="@color/colorAccent"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
